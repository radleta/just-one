{
  "name": "@radleta/just-one",
  "version": "1.3.0",
  "description": "A CLI tool that ensures only one instance of a command runs at a time",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "just-one": "bin/just-one.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:npm": "JUST_ONE_NPX=1 JUST_ONE_CLI=@radleta/just-one vitest run src/e2e/",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\" \"*.{json,md,yml,yaml}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.{json,md,yml,yaml}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "pack:dry": "npm pack --dry-run",
    "size:check": "npm pack --dry-run 2>&1 | grep 'package size' | head -1 || echo 'Run npm pack to see size'",
    "verify:package": "node scripts/verify-package.js",
    "release:prepare": "npm run validate && npm run build && npm run verify:package && npm run size:check && echo '\nReady for release. Run: npm run release'",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "postrelease": "git push && git push --tags",
    "prepublishOnly": "npm run validate && npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "process",
    "singleton",
    "pid",
    "kill",
    "dev-server",
    "storybook",
    "vite",
    "webpack"
  ],
  "homepage": "https://github.com/radleta/just-one#readme",
  "bugs": {
    "url": "https://github.com/radleta/just-one/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radleta/just-one.git"
  },
  "author": {
    "name": "Richard Adleta",
    "email": "radleta@gmail.com",
    "url": "https://github.com/radleta"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pidusage": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.4.2",
    "standard-version": "^9.5.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.0.0"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "pidusage": "^4.0.1"
  }
}
